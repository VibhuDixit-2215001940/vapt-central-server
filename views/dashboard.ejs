<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/style.css" />

    <script>
      // REDIRECT TO LOGIN IF TOKEN IS NOT PRESENT
      if (!localStorage.getItem("adminToken")) {
        window.location.href = "/api/v1/admin/login";
      }
    </script>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="#">VAPT Admin Panel</a>
        <span class="navbar-text me-auto"> Welcome, <%= adminUsername %> </span>
        <button class="btn btn-outline-danger" id="logoutBtn">Logout</button>
      </div>
    </nav>

    <div class="container-fluid mt-4">
      <h1 class="mb-4">Client User Management</h1>

      <button
        class="btn btn-primary mb-3"
        data-bs-toggle="modal"
        data-bs-target="#createUserModal"
      >
        <i class="fas fa-plus"></i> Create New User
      </button>

      <div
        id="alertMessage"
        class="alert"
        style="display: none"
        role="alert"
      ></div>

      <div class="table-responsive shadow-sm p-3 bg-white rounded">
        <table class="table table-hover align-middle">
          <thead class="table-dark">
            <tr>
              <th>Username</th>
              <th>Subscription Status</th>
              <th>Scans Done</th>
              <th>Joined On</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody id="userTableBody"></tbody>
        </table>
      </div>
    </div>

    <!-- CREATE USER MODAL -->
    <div
      class="modal fade"
      id="createUserModal"
      tabindex="-1"
      aria-labelledby="createUserModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="createUserModalLabel">
              Create New VAPT User
            </h5>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form id="createUserForm">
              <div class="mb-3">
                <label for="newUsername" class="form-label">Username</label>
                <input
                  type="text"
                  class="form-control"
                  id="newUsername"
                  required
                />
              </div>
              <div class="mb-3">
                <label for="newSubscription" class="form-label"
                  >Subscription Status</label
                >
                <select class="form-select" id="newSubscription" required>
                  <option value="trial">Trial</option>
                  <option value="premium">Premium</option>
                </select>
              </div>
              <button type="submit" class="btn btn-success w-100">
                Create User
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://kit.fontawesome.com/a076d05399.js"
      crossorigin="anonymous"
    ></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/dashboard.js"></script>
  </body>
</html>
